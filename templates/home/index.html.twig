{% extends 'base.html.twig' %}

{% block title %}Lista de Películas{% endblock %}

{% block body %}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Lista de Películas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <h1 class="mb-4 text-center">{{ controller_name }}</h1>
        {% if mensaje %}
            <div class="alert alert-warning text-center">
                {{ mensaje }}
            </div>
        {% else %}
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
                {% for pelicula in peliculas %}
                    <div class="col d-flex justify-content-center">
                        <div class="card" style="width: 18rem;">
                            <img src="{{ pelicula.poster }}" class="card-img-top" alt="{{ pelicula.titulo }}">
                            <div class="card-body">
                                <h5 class="card-title">{{ pelicula.titulo }}</h5>
                                <p class="card-text">
                                    <strong>Género:</strong> {{ pelicula.genero }}<br>
                                    <strong>Director:</strong> {{ pelicula.director }}<br>
                                    <strong>Duración:</strong> {{ pelicula.duracion }}<br>
                                    <strong>Valoración:</strong> {{ pelicula.valoracion }}<br>
                                    <strong>Estreno:</strong> {{ pelicula.estreno }}
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
{% endblock %}

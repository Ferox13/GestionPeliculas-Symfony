{% extends 'base.html.twig' %}

{% block title %}Detalle de la película{% endblock %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container my-5">
    <div class="card mb-3">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="{{ pelicula.poster }}" class="img-fluid rounded-start" alt="{{ pelicula.titulo }}">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h3 class="card-title">{{ pelicula.titulo }}</h3>
                    <p class="card-text"><strong>Género:</strong> {{ pelicula.genero }}</p>
                    <p class="card-text"><strong>Director:</strong> {{ pelicula.director }}</p>
                    <p class="card-text"><strong>Duración:</strong> {{ pelicula.duracion }}</p>
                    <p class="card-text"><strong>Valoración:</strong> {{ pelicula.valoracion }}</p>
                    <p class="card-text"><strong>Estreno:</strong> {{ pelicula.estreno }}</p>
                    <a href="{{ path('app_home') }}" class="btn btn-primary mt-3">Volver</a>
                    <a href="{{ path('editar_pelicula', {'id': pelicula.id}) }}" class="btn btn-secondary mt-3 ms-2">Editar</a>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
